<%- include('partials/header'); -%>
<h1>HOME</h1>
<p><%= homeContent %></p>

<% posts.forEach((post)=>{ %>
<h2><%= post.title %></h2>
<p style="word-wrap: break-word">
  <% if(post.content.length>250){ %> <%= post.content.substring(0,250) + "..."
  %>
  <a href="/post/<%= post.title %>">read more</a>
</p>
<% }else{ %>
<p style="word-wrap: break-word"><%= post.content %> <% } %></p>

<% }); %> <%- include('partials/footer'); -%>
